<canvas id="statChart"></canvas>
<script>
    var ctx = document.getElementById('statChart').getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'line',

        // The data for our dataset
        data: {
            labels: [{{#each turns}}{{this}}{{#unless @last}},{{/unless}}{{/each}}],
            datasets: [{
                label: 'Wit',
                fill: false,
                backgroundColor: '#bfb6b6',
                borderColor: '#bfb6b6',
                data: [{{#each white}}{{this}}{{#unless @last}},{{/unless}}{{/each}}],
            },
                {
                    label: 'Zwart',
                    fill: false,
                    backgroundColor: '#000000',
                    borderColor: '#000000',
                    data: [{{#each black}}{{this}}{{#unless @last}},{{/unless}}{{/each}}],
                }]
        },

        // Configuration options go here
        options: {
            animation: {
                duration: 0
            },
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Aantal Fishies per beurt'
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Beurten'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Fishies'
                    },
                    ticks: {
                        stepSize: 1,
                        beginAtZero: true,
                    },
                }]
            }
        }
    });
</script>